syntax  enable
set  number
set  ruler
set  listchars=tab:>-,trail:-,nbsp:%,extends:>,precedes:<,eol:<
set  incsearch
set  hlsearch
set  nowrap
set  showmatch
set  whichwrap=h,l
set  autoindent
set  nowrapscan
set  ignorecase
set  smartcase
set  hidden
set  history=2000
set  expandtab
set  tabstop=2
set  shiftwidth=2
set  helplang=en
set  cindent

colorscheme  desert

nnoremap  ;  :
nnoremap  :  ;
vnoremap  ;  :
vnoremap  :  ;
inoremap <silent> jj <ESC>
